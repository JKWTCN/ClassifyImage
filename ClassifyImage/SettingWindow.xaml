                        <Button Grid.Column="2" Content="选择路径" Click="ChooseSaveClick" Name="open_btn_9" ></Button>
                    </Grid>
                </Grid>

            </TabItem>
            <TabItem Header="软件配置">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center">分类后自动切换下一张</TextBlock>
                            <CheckBox Name="auto_next_check" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="True"></CheckBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center">同时按下多个键分类</TextBlock>
                            <CheckBox Name="mut_kind_check" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="False"></CheckBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="2">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center">配置窗口和主窗口同时可操作</TextBlock>
                            <CheckBox Name="control_main_setting_windows" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="False"></CheckBox>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="关于">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>

                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="D:\WORKSPACE\Code\VS\ClassifyImage\ClassifyImage\res\face.jpg"></Image>
                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">@浮云战争</TextBlock>
                        <TextBlock Grid.Row="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                            B站:
                            <Hyperlink Name="bilibili_url_hyperlink" NavigateUri="https://space.bilibili.com/283390377" RequestNavigate="Hyperlink_RequestNavigate">https://space.bilibili.com/283390377</Hyperlink>
                        </TextBlock>
                        <TextBlock Grid.Row="2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                        GitHub:
                        <Hyperlink NavigateUri="https://github.com/JKWTCN" RequestNavigate="Hyperlink_RequestNavigate" Name="github_url_hyperlink">https://github.com/JKWTCN</Hyperlink>
                        </TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
