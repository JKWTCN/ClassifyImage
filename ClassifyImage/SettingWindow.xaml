                        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Name="path_7_text">未分配路径</TextBlock>
                        <Button Grid.Column="2" Content="选择路径" Click="ChooseSaveClick" Name="open_btn_7" ></Button>
                    </Grid>
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">8</TextBlock>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Name="path_8_text">未分配路径</TextBlock>
                        <Button Grid.Column="2" Content="选择路径" Click="ChooseSaveClick" Name="open_btn_8" ></Button>
                    </Grid>
                    <Grid Grid.Row="9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
